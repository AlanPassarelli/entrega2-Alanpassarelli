
<link rel="stylesheet" href="css/login.css" />

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">Iniciar sesión</div>
                <div class="card-body">
                    <form id="loginForm">
                        <div class="form-group">
                            <label>Email</label>
                            <input type="email" class="form-control" id="email" value="Ingresa tu Mail" required>
                        </div>
                        <div class="form-group">
                            <label>Password</label>
                            <input type="password" class="form-control" id="password" value="contraseña" required>
                        </div>
                        <button type="submit" class="btn btn-primary">Enviar</button>
                    </form>
                </div>
                <div class="mt-4 text-center">
                    ¿Aún no tenés una cuenta? <a href="/signup">Regístrate aquí</a>
                </div>
            </div>
        </div>

    </div>

</div>

<script src="js/login.js"></script>
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
